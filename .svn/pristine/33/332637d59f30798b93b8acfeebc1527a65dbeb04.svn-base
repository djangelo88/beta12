<section id="components">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h2><span class="text-success">Galería </span>de oferta de productos</h2>

                <p>{{ gallery_comments }} </p>
            </div>
        </div>

        <div class="ocarousel_slider">
            <div class="ocarousel example_photos" data-ocarousel-perscroll="3">
                <div class="ocarousel_window">
                    {% for photo in photo_list %}
                        <a href="#" title="{{ photo.name }}" class="crop">
                            <img src="/media/{{ photo.image }}" class="img-responsive" alt=""
                                 onclick="show_modal({{ forloop.counter0 }});"
                                 data-toggle="modal_gallery" data-target="#modal_gallery"/>

                            <div class="label-image">{{ photo.name | capfirst }}</div>
                        </a>
                    {% endfor %}
                </div>
               <span>
                <a href="#" data-ocarousel-link="left" class="prev"><i class="fa fa-angle-left"></i> </a>
                <a href="#" data-ocarousel-link="right" class="next"> <i class="fa fa-angle-right"></i></a>
               </span>
            </div>
        </div>
    </div>
</section>

{% include 'business_site/landing_pages/template1/img_carousel.html' with modal_id="modal_gallery" photos=photo_list %}


{% if menu_list %}
    <section id="menu_section" class="bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <h2><span class="text-success">Menu </span>de productos disponibles</h2>

                </div>
            </div>

            <div class="row">
                {% for item in menu_list %}
                    <div class="col-md-4 col-sm-6">


                        <div class="blog-post">
                            <div class="blog-thumb crop crop320">
                                {% if  item.menu.image %}
                                    <img src="{{ item.menu.image.url }}" alt="{{ item.menu.name }}" class="hand"
                                         onclick="show_modal_menu({{ forloop.counter0 }});"
                                         data-toggle="modal_menu" data-target="#modal_menu"/>
                                {% else %}
                                    <img src="{% static 'images/no_image.png' %}" alt=""/>
                                {% endif %}

                                {#                        360x244#}
                            </div>
                            <div class="blog-content">
{#                                <div class="content-show">#}
                                    <h4> {{ item.menu.name }} </h4>
                                    {#                                    <span>{{ item.menu.category }}</span>#}
                                    <p>{{ item.menu.description }}</p>
                                    {% if item.rangos %}
                                        <table class="table table-no-bordered" id="tabla-rangos">
                                            <thead>
                                            <tr>
                                                <th>Invitados</th>
                                                <th>Precio</th>
                                                <th>total</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for rango in item.rangos %}
                                                <tr>
                                                    <td>{{ rango.max }} Personas</td>
                                                    <td>$ {{ rango.price | floatformat:"2" }}</td>
                                                    <td>$ {{ rango.get_total |  floatformat:"2" }}</td>
                                                </tr>
                                            {% endfor %}
                                           </tbody>
                                        </table>
                                    {% endif %}
                            </div>
                        </div>
                    </div>
                    {% if forloop.counter|divisibleby:3 %}              <div class="clearfix"></div>              {% endif %}
                {% endfor %}

            </div>
        </div>
    </section>
    {#    {% include 'business_site/landing_pages/template1/img_carousel_menu.html' with modal_id_menu="modal_menu" menus=menu_list %}#}
{% endif %}
{% if staff_services %}


    <section id="staff_section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <h2><span class="text-success">Staff </span>and services</h2>

                </div>
            </div>

            <div class="row text-center">

                {% if staff_services|length_is:1 %}
                    {% for staff_item in staff_services %}
                        <div class="col-sm-4 col-sm-push-4 staff ">
                            <img src="/media/{{ staff_item.image }}" alt="" class="staff-image"/>

                            <h3>{{ staff_item.service }}</h3>

                            <p>{{ staff_item.description }}</p>
                            {% if staff_item.price > 0 %}
                                <h5 class="text-success">$ {{ staff_item.price |floatformat:"2" }}</h5>
                            {% endif %}

                        </div>
                    {% endfor %}
                {% elif staff_services|length_is:2 %}
                    {% for staff_item in staff_services %}
                        <div class="col-sm-3 col-sm-push-3 staff ">
                            <img src="/media/{{ staff_item.image }}" alt="" class="staff-image"/>

                            <h3>{{ staff_item.service }}</h3>

                            <p>{{ staff_item.description }}</p>
                            {% if staff_item.price > 0 %}
                                <h5 class="text-success">$ {{ staff_item.price |floatformat:"2" }}</h5>
                            {% endif %}

                        </div>
                    {% endfor %}
                {% elif staff_services|length_is:3 %}
                    {% for staff_item in staff_services %}
                        <div class="col-sm-3 col-sm-push-2 staff ">
                            <img src="/media/{{ staff_item.image }}" alt="" class="staff-image"/>

                            <h3>{{ staff_item.service }}</h3>

                            <p>{{ staff_item.description }}</p>
                            {% if staff_item.price > 0 %}
                                <h5 class="text-success">$ {{ staff_item.price |floatformat:"2" }}</h5>
                            {% endif %}

                        </div>
                    {% endfor %}
                {% else %}
                    {% for staff_item in staff_services %}
                        <div class="col-sm-3 staff ">
                            <img src="/media/{{ staff_item.image }}" alt="" class="staff-image"/>

                            <h3>{{ staff_item.service }}</h3>

                            <p>{{ staff_item.description }}</p>
                            {% if staff_item.price > 0 %}
                                <h5 class="text-success">$ {{ staff_item.price |floatformat:"2" }}</h5>
                            {% endif %}

                        </div>
                    {% endfor %}
                {% endif %}


            </div>
        </div>
    </section>
{% endif %}
<section id="contact" class="bg-light">
