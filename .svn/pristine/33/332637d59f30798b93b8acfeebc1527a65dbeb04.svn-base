                      action="{% url 'sendmailcontact' %}"{% endif %}>
                    {% csrf_token %}
                    <div id="div_form">
                        {% include 'business_site/landing_pages/template1/sendmailform.html' %}
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9" id="div_form">
                            <input id="send_customer_email" name="submit" type="submit" value="Send us a message"
                                   class="btn btn-success" style="margin-left: 15px">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-3 text-left ">
                <address>
                    <strong><span class="navy">  {{ basic_info.website.business.name }}</span></strong><br/>
                    {% if contact_info.address %}
                        <i class="fa fa-map-marker"></i> {{ contact_info.address }}
                    {% endif %}
                    <br/>
                    {% if  contact_info.phone %}
                        <abbr title="Phone"><i class="fa fa-phone"></i></abbr>
                        <a href="tel:{{ contact_info.phone }}">{{ contact_info.phone }}</a>
                    {% endif %}

