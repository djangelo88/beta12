            {% endif %}
            {% if social_links.facebookpage %}
                <div class="social-icon display-inline">
                    <a href="{{ social_links.facebookpage }}" class="" target="_blank"> <i
                            class="fa fa-facebook"></i> </a>
                </div>
            {% endif %}
            {% if social_links.gplus %}
                <div class="social-icon display-inline">
                    <a href="{{ social_links.gplus }}" class="" target="_blank"> <i
                            class="fa fa-google-plus"></i> </a>
                </div>
            {% endif %}
            {% if social_links.yelp %}
                <div class="social-icon display-inline">
                    <a href="{{ social_links.yelp }}" class="" target="_blank"> <i
                            class="fa fa-yelp"></i> </a>
                </div>
            {% endif %}

        </div>

    </div>
</section>
<footer class=" ">
