@font-face {
    font-family: 'Roboto-Regular';
    src: url('../fonts/Roboto-Regular.ttf') format('truetype');
}
@font-face {
    font-family: 'RobotoCondensed-Bold';
    src: url('../fonts/RobotoCondensed-Bold.ttf') format('truetype');
}

.print{
    visibility: visible;
    display: block;
}

.no-print{
    visibility: collapse !important;
}
.print-area{
    width: 100%;
}

.main-sidebar{visibility: collapse}

.logo-print{
    height: 30px;
}


/*Proposal/Invoice Detail */
.event-detail{
    font-family: Roboto-Regular;


}
.h1-title{
    background-color: #393939 !important;
    color: #fff !important;
    text-align: right;
    padding: 5px 15px;
    text-transform: uppercase;
    font-family: RobotoCondensed-Bold;
    letter-spacing: 4pt;
    margin: 0;
    -webkit-print-color-adjust: exact;

}
.h3-title{
  text-transform: uppercase;
    font-family: Roboto-Regular;
    color: #666666 !important;
    margin: 0;
    padding-top: 15px;
    -webkit-print-color-adjust: exact;
}
.client{
    margin-right: 0px;
    margin-bottom: 5px;
}
.event-detail.invoic .client{
     background-color: #D02929 !important;
    -webkit-print-color-adjust: exact;
}
.event-detail.proposal .client{
     background-color: #036E9E !important;
     -webkit-print-color-adjust: exact;
}
.client p{
    text-transform: uppercase;
    color: #ffffff !important;
    font-size: 12pt;
    padding: 10px 0;
    margin: 0;-webkit-print-color-adjust: exact;
}
.client p:last-child{
    letter-spacing: 1.1pt;
    margin-right: 5px;-webkit-print-color-adjust: exact;
}
.descriptions{
    padding-right: 15px;-webkit-print-color-adjust: exact;
}
.descriptions p{
    margin-bottom: 0;-webkit-print-color-adjust: exact;
}
.event-detail .items{
    margin-top: 30px;-webkit-print-color-adjust: exact;
}
.detail-items-table {
    font-size: 10pt;-webkit-print-color-adjust: exact;
}
.detail-items-table thead{
    background-color: #393939 !important;
    -webkit-print-color-adjust: exact;
}
.detail-items-table thead tr{
     border:1px solid #393939;
    -webkit-print-color-adjust: exact;
}
.detail-items-table thead tr th{
    border:1px solid #393939 !important;
    background-color: #393939 !important;
    text-align: center;
    color: #ffffff !important;
    text-transform: uppercase;
    letter-spacing: 1.1pt;
    -webkit-print-color-adjust: exact;
}
.detail-items-table>tbody>tr>td{
    padding: 4px;
    -webkit-print-color-adjust: exact;
}
.invoic th.descuento{
    border-right:  4px solid #D02929 !important;
    -webkit-print-color-adjust: exact;
}
.proposal th.descuento{
    border-right:  4px solid #036E9E !important;
    -webkit-print-color-adjust: exact;
}
.event-detail.proposal .detail-items-table th.total{
    border: 1px solid #036E9E !important;
    border-top: 10px solid  #036E9E !important;
    background-color: #036E9E !important;
    border-right: 3px solid #036E9E !important;
    -webkit-print-color-adjust: exact;
}
.event-detail.proposal .detail-items-table tbody td:last-child{
    border-left: 4px solid #036E9E !important;
    border-right: 4px solid #036E9E !important;
    -webkit-print-color-adjust: exact;
}
.event-detail.invoic .detail-items-table th.total{
    border: 1px solid #D02929 !important;
    border-top: 10px solid  #D02929 !important;
    background-color: #D02929 !important;
    border-right: 3px solid #D02929 !important;
    -webkit-print-color-adjust: exact;
}
.event-detail.invoic .detail-items-table tbody td:last-child{
    border-left: 4px solid #D02929 !important;
    border-right: 4px solid #D02929 !important;
    -webkit-print-color-adjust: exact;
}
.detail-items-table tfoot tr {
    border: none;-webkit-print-color-adjust: exact;
}
.no-border-subtotal{
    border-left: 1px solid transparent !important;
    border-bottom: 1px solid #ffffff !important;
    -webkit-print-color-adjust: exact;
}
.subtotal-title,.subtotal-value{
    text-transform: uppercase;
     background-color:  #393939 !important;
        padding: 10px !important;
    font-size: 12pt;
    -webkit-print-color-adjust: exact;
}
.subtotal-title{padding-left: 5px; background-color: #fff!important;color: #666!important; -webkit-print-color-adjust: exact;}
.invoic .subtotal-value{text-align: right; border-bottom: 6px solid #D02929 !important;-webkit-print-color-adjust: exact;}
.proposal .subtotal-value{text-align: right; border-bottom: 6px solid #036E9E !important;-webkit-print-color-adjust: exact;}
.subtotal-value{
   background-color:  #393939 !important;    -webkit-print-color-adjust: exact;
}
/*Footer*/
.payment-cards{
    list-style:none;
    margin-left: 0;
    padding-left: 0;

}
.payment-cards li{display: inline-block; border-right: 1px solid #d6d6d6; padding-right: 4px; text-transform: uppercase -webkit-print-color-adjust: exact;}
.payment-cards li:last-child{ border-right:none}

.detail-footer-content{  font-family: Roboto-Regular; color: #393939;-webkit-print-color-adjust: exact; margin-top: 100px;}
.detail-footer-content h4{text-transform: uppercase; margin-bottom: 2px}
.detail-footer-content p{ margin-bottom: 2px}

